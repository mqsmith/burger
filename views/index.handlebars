<div class="row">
  <div class="col">
    <h2>Burgers to Eat!</h2>
    <ul style="list-style: none;">
      {{#each burgers}}
      {{#unless devour}}
      {{> burger/burger-block devour=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col">
    <h2>Burgers that have been devoured!</h2>

    <ul style="list-style: none;">
      {{#each burgers}}
      {{#if devour}}
      {{> burger/burger-block devour=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>


<div class="form">
  <h2>Add a Burger</h2>
  <form class="create-form">

    <div class="form-group">
      <label for="ba">Burger Name:</label>
      <input type="text" id="ba" name="burger_name">
    </div>

    <div class="form-group">
      <label for="devour">Hungry?</label><br>
      <input type="radio" name="devour" value="1" checked> Eaten!<br>
      <input type="radio" name="devour" value="0"> To be Eaten!
    </div>

    <button type="submit">Order Here</button>
  </form>
</div>